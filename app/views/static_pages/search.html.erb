<h1>StaticPages#Search</h1>

Keyword:<%= @key%>
<p>
<%= form_tag(static_pages_search_path, method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>
</p>
<p>
URL
<% @result["results"].each do |p| -%>
  <li><%= p["previewUrl"] %></li>
<% end -%>
</p>
<p>
NAME
<%= form_tag(users_new_path, method: "get") do %>
<% @result["results"].each do |p| -%>
  <label><%= radio_button 'name','description', p["trackName"]+" "+p["artistName"],{} %><%= p["trackName"]+"|"+p["artistName"]%></label>
<% end -%>
<%= submit_tag("Choice") %>
<% end %>

</p>

